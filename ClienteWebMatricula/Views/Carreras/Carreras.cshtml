                                                <td id="@item.Codigo" data-propertyName="Codigo">@item.Codigo</td>
                                                <td class="edit" id="@item.Codigo" data-propertyName="Nombre">@item.Nombre</td>
                                                <td>
                                                    @Html.ActionLink("", "Eliminar", "Carreras", new { id = item.Codigo }, new { @class = "btn fa fa-trash-alt" })
