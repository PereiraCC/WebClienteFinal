@section scripts {
    <script src="~/Scripts/jquery.jeditable.min.js"></script>
    <script>
        $(function () {
            $(".table").DataTable();
            $(".edit").editable("/Carreras/Actualizar", {
                submitdata: function () {
                    return {
                        PropertyName: $(this).data("propertyname")
                        //$(this).text(jsonData.value);
                    }
                },
                //Función para poder recibir el nuevo valor y mostrarlo
                callback: function (value, settings) {
                    var jsonData = $.parseJSON(value);
                    if (jsonData.status) {
                        $(this).text(jsonData.value);
                    }
                    else {
                        $(this).text(jsonData.mensaje);
                    }
                }
            });
            $("#listarConAjax").click(function (event) {
                event.preventDefault();
                var tabla = $("#tabla").DataTable();
                tabla.destroy();
                $.ajax({
                    url: "/Estudiante/ListarAjax",
                    success: function (resultado) {
                        $("#tabla").DataTable({
                            sort: false,
                            data: resultado.data,
                            columns: [
                                { "data": "NumeroIdentificacion" },
                                { "data": "Nombre" },
                                { "data": "Apellidos" },
                                {
                                    "data": "FechaNac", "render": function (data, row, type, meta) {
                                        if (data != undefined) {
                                            var milisegundos = parseInt(data.replace("/Date(", "").replace(")/", ""));
                                            return new Date(milisegundos).toLocaleDateString("en-UE");
                                        }
                                        else {
                                            return data;
                                        }
                                    }
                                },
                                {
                                    "data": "NumeroIdentificacion", "render": function (data, row, type, meta) {
                                        return "<a class='btn btn-warning' href='/Estudiante/Editar/" + data + "'>Editar</a>" +
                                            " " + "<a class='btn btn-danger' href='/Estudiante/Borrar/" + data + "'>Borrar</a>"
                                    }
                                }
                            ]
                        })
                    }
                });
            });
        });
    </script>
}
